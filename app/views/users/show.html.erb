<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="micropost_form">
        <%= render 'shared/todolist_form' %>
    </section>
  </aside>
  <div class="col-md-6">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.todolists.any? %>
      <h3>Todolists (<%= @user.todolists.count %>)</h3>
      <ol class="todolists">
        <%= render partial: 'todolists/todolist', collection: @todolists %>
      </ol>
    <% end %>
  </div>
</div>