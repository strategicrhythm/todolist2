<% if current_user == @todolist.user %>
<%= form_for(@todolist, html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
      <%= link_to "マイページへ戻る", @user %>
     <table class="table table-striped table-bordered table-hover">
          <tbody>
             <tr>
               <th colspan="6">リストタイトル</th>
            </tr>
            <td colspan="6">
                <%= f.text_field :title, class: 'form-control' %>
            </td>
            <tr>
               <th>やること</th>
               <th>期日</th>
               <th>状況</th>
               <th>画像</th>
               <th>ステータス</th>
               <th>Action</th>
            </tr>
            <tr>
                <td><%= f.text_field :things, class: 'form-control' %></td>
                <td><%= f.text_field :note, class: 'form-control' %></td>
                <td><%= f.select :situation, Todolist.situations.keys, class: 'form-control' %></td>
                <td><%= f.file_field :avatar %></td>
                <td><%= render 'todolists/judge', object: @todolist %></td>
                <td></td>             
            </tr>
            <%= f.nested_fields_for :listtables, wrapper_tag: :tr do |q| %>
                <td><%= q.text_field :things, class: 'form-control' %></td>
                <td><%= q.text_field :note, class: 'form-control' %></td>
                <td><%= q.select :situation, Listtable.situations.keys, class: 'form-control' %></td>
                <td><%= q.file_field :avatar %></td>
                <td></td>
                <td><%= q.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %></td>
            <% end %>

          </tbody>
       </table>
      <%= f.add_nested_fields_link :listtables, 'Add new table', class: 'btn btn-primary', role: 'button' %>
  </div>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>
<% end %>

<% if current_user.email == @todolist.approver %>
<%= form_for(@todolist, html:{class: 'form-horizontal'}) do |f| %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <%= link_to "マイページへ戻る", @user %>
    </section>
  </aside>
  <div class="col-md-12">
      <h3>リストタイトル:<%= @todolist.title %></h3>
       <h4>リスト作成者<%= link_to @todolist.user.name, @todolist.user %></h4>
        <table class="table table-striped table-bordered table-hover">
           
          <tbody>
          　<tr>
               <th>やること</th>
               <th>メモ</th>
               <th>状況</th>
               <th>画像</th>
               <th>ステータス</th>
            </tr>
            <tr>
              <td><%= @todolist.things %></td>
              <td><%= @todolist.note %></td>
              <td><%= render 'todolists/move', object: @todolist %></td>
              <td><%= image_tag @todolist.avatar.url(:thumb) %></td>
              <td><%= f.select :status, Todolist.statuses.keys, class: 'form-control' %></td>
            </tr>

            <% @todolist.listtables.each do |listtable| %>
            <tr>
                
               <td><%= listtable.things %></td>
               <td><%= listtable.note %></td>
               <td><%= render 'todolists/action', object: listtable %></td>
               <td><%= image_tag listtable.avatar.url(:thumb) %></td>
               <td></td>
            </tr>
            <% end %>
           </tbody>
        </table>
        <%= f.submit "Update", class: "btn btn-primary" %>
   </div>
</div>
<% end %>
<% end %>